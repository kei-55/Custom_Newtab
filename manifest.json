{
  "manifest_version": 3,
  "name": "Custom New Tab - Only Shortcuts",
  "version": "1.1",
  "description": "フォルダ機能を削除し、ショートカット管理とGoogle検索のみの新しいタブ (ショートカットを検索バーの上に表示)",
  "icons": {
    "128": "icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://www.google.com/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "Sortable.min.js",
        "icon.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
